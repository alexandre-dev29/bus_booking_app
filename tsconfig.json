{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@data-access": [
        "libs/data-access"
      ],
      "@utilities": [
        "libs/utility"
      ],
      "@app-security": [
        "libs/app-security"
      ],
      "@shared-types": [
        "libs/shared-types"
      ]
    }
  }
}
