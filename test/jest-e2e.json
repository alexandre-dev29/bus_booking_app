{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@data-access": "<rootDir>/../libs/data-access",
    "@utilities": "<rootDir>/../libs/utility",
    "@app-security": "<rootDir>/../libs/app-security"
  }
}
